{
  "name": "peaks-and-valleys",
  "version": "1.0.0",
  "description": "Challenge to Build Castles on Peaks and Valleys of a Land.",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Geraldo B. Landre <geraldo.landre@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "mocha": "^3.4.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-flow-strip-types"
    ],
    "env": {
      "test": {
        "presets": [
          "es2015"
        ],
        "plugins": [
          "transform-flow-strip-types"
        ]
      }
    },
    "ignore": [
      "/flow-typed",
      "/build",
      "/static/js/*.js"
    ]
  }
}
